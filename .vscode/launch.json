    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate secret",
            "type": "PowerShell",
            "request": "launch",
            "script": "node -e \"console.log(require('crypto').randomBytes(64).toString('base64'))\"",
            "cwd": "${cwd}"
        },
        {
            "name": "Run prisma migrate",
            "type": "PowerShell",
            "request": "launch",
            "script": "npx prisma migrate dev --name init",
            "cwd": "${cwd}"
        },
        {
            "command": "pnpm run dev",
            "name": "Run pnpm run dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app\\api\\signup\\route.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}