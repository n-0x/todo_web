generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  username   String       @unique
  pass_hash  String

  long_lived_tokens long_lived_tokens[]
}

model long_lived_tokens {
  id         Int           @id @default(autoincrement())
  user       users         @relation(fields: [username], references: [username])
  username   String        @unique
  api_token  String
  web_token  String
  expires     DateTime
}